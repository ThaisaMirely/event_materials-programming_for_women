<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="tmbs.birthdaycard.MainActivity"
        android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="20px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gerador de Cartões"
        android:id="@+id/textView_label_title" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Messagem:"
        android:id="@+id/textView_message" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:lines="5"
        android:id="@+id/editText_message"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Título do Cartão:"
        android:id="@+id/textView_stickers" />



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioButton android:id="@+id/radioButton_sticker01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="título 01"
            android:layout_gravity="center_horizontal|left"
            android:layout_weight="0.50" />

        <RadioButton android:id="@+id/radioButton_sticker02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:text="título 02" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:src="@drawable/title_01"
            android:id="@+id/imageView_sticker01"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />

        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:src="@drawable/title_02"
            android:id="@+id/imageView_sticker02"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Imagem de fundo:"
        android:id="@+id/textView_background" />


        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_image_title"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton android:id="@+id/radioButton_background01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="imagem 01"
                android:layout_gravity="center_horizontal|left"
                android:layout_weight="0.50" />

            <RadioButton android:id="@+id/radioButton_background02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:text="imagem 02" />
        </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:src="@drawable/background_01"
            android:id="@+id/imageView_background01"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />

        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:src="@drawable/background_02"
            android:id="@+id/imageView_background02"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.50" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar Cartão"
        android:id="@+id/button_card"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

</ScrollView>

